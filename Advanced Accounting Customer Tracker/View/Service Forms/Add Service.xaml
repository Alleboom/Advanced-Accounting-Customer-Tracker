<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Service_View_Models="clr-namespace:Advanced_Accounting_Customer_Tracker.ViewModel.Service_View_Models" x:Class="Advanced_Accounting_Customer_Tracker.View.Service_Forms.Add_Service"
        Title="Add Service" Height="Auto" SizeToContent="Height" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="Name:"/>
            <TextBox Text="{Binding NewName, Mode=TwoWay}" />
            <Label Content="Description" />
            <TextBox Text="{Binding NewDescription, Mode=TwoWay}" />
            <Button Content="Save" Command="{Binding Save}" Margin="0,5,0,0" CommandParameter=""/>
        </StackPanel>
    </Grid>
</Window>
